
# Worker Configuration
NODE_ENV=development
WORKER_CONCURRENCY=2

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 / Cloudflare R2 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=uprise-media

# For Cloudflare R2, set these:
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_PUBLIC_URL=https://your-r2-public-domain.com

# FFmpeg Configuration (optional, if not in PATH)
# FFMPEG_PATH=/usr/bin/ffmpeg
# FFPROBE_PATH=/usr/bin/ffprobe

# API Configuration (for webhooks)
API_URL=http://localhost:4000
WEBHOOK_SECRET=your-webhook-secret-for-transcoder

# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
