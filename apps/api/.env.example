
# Server Configuration
NODE_ENV=development
PORT=4000

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration
# PostgreSQL with PostGIS extension
DATABASE_URL=postgresql://username:password@localhost:5432/uprise?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 / Cloudflare R2 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=uprise-media

# For Cloudflare R2, set this:
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_PUBLIC_URL=https://your-r2-public-domain.com

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-transcoder

# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog (Optional)
POSTHOG_API_KEY=your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com
